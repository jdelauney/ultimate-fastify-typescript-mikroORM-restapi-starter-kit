  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "rm -rf build && esbuild src/app.ts --bundle --platform=node --outfile=dist/index.js --minify",
    "start": "pnpm run build && cp src/.env dist/.env && node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --fix",
    "format": "prettier --write",
    "prepare": "husky install"
  },
